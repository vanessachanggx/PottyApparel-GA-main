<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POTTY APPARELs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@400;600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    body {
        font-family: 'Public Sans';
        background-color: #e6e2df;
        color: #343a40;
        margin: 0;
        padding: 0;
    }

    .card {
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .btn-custom {
        background-color: #3f2c1b;
        color: white;
        border-radius: 5px;
        width: 60%;
    }

    .btn-custom:hover {
        background-color: #e6e2df;
        color: black;
    }

    .order-card {
        margin-bottom: 20px;
    }

    .order-items {
        border-top: 1px solid #eee;
        border-bottom: 1px solid #eee;
        padding: 15px 0;
        margin: 15px 0;
    }

    .product-image {
        border-radius: 5px;
        object-fit: cover;
    }

    .item-details {
        flex-grow: 1;
        padding-left: 15px;
    }

    .order-total {
        text-align: right;
        font-weight: bold;
    }
</style>
<body>
    <%- include('partial/navbar.ejs') %>
    <div class="container mt-5">
        <h1 class="text-center mb-4" style="color: #333;">Welcome, <strong><%= user.FirstName %></strong>!</h1>
        
        <!-- User Profile Card -->
        <div class="card mx-auto mb-5" style="max-width: 28rem;">
            <img src="/images/<%= user.Image %>" class="card-img-top" alt="User Image">  
            <div class="card-body text-center">
                <p class="card-text">Email: <%= user.Email %></p>
                <p class="card-text">Phone Number: <%= user.PhoneNumber %></p>
                <a href="/editAccount" class="btn btn-custom">Edit Details</a>
            </div>
        </div>

        <!-- Orders Section -->
        <div class="orders-section">
            <h3 class="text-center mb-4">My Orders</h3>
            <div class="order-list">
                <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <div class="order-card">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Order #<%= order.orderId %></h5>
                                    <p class="card-text text-muted">
                                        Ordered on: <%= new Date(order.orderDate).toLocaleString() %>
                                    </p>
                                    
                                    <div class="order-items">
                                        <% order.items.forEach(item => { %>
                                            <div class="d-flex align-items-center mb-3">
                                                <img src="/images/<%= item.Image %>" 
                                                     alt="<%= item.Name %>" 
                                                     class="product-image"
                                                     style="width: 60px; height: 60px;">
                                                <div class="item-details">
                                                    <h6 class="mb-0"><%= item.Name %></h6>
                                                    <small>Size: <%= item.Size %> | Quantity: <%= item.Quantity %></small>
                                                    <p class="mb-0">$<%= Number(item.Price).toFixed(2) %></p>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>

                                    <div class="order-total">
                                        <h6>Total Amount: $<%= order.totalAmount.toFixed(2) %></h6>
                                    </div>

                                    <div class="text-center mt-3">
                                        <a href="/invoice/<%= order.orderId %>" class="btn btn-custom">
                                            View Invoice
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center">
                        <p>No orders found</p>
                        <a href="/" class="btn btn-custom">Start Shopping</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('partial/footer.ejs') %>
</body>
</html>
