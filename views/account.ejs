<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POTTY APPARELs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@400;600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    .card {
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .btn-custom {
        background-color: #3f2c1b;
        color: white;
        border-radius: 5px;
        width: 60%;
    }

    .btn-custom:hover {
        background-color: #e6e2df;
        color: black;
    }

    body {
        font-family: 'Public Sans';
        background-color: #e6e2df;
        color: #343a40;
        margin: 0;
        padding: 0;
    }

    .btn-address {
        background-color: rgba(0, 0, 0, 0.1);
        border: none;
        color: black;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 20px;
        display: inline-block;
    }

    .btn-address:hover {
        background-color: rgba(0, 0, 0, 0.2);
    }

    .account-container {
        text-align: center;
    }
</style>
<body>
    <%- include('partial/navbar.ejs') %>
        <div class="container mt-5 account-container">
            <div class="container mt-5 account-container">
                <h1 class="text-center mb-4" style="color: #333;">Welcome, <strong><%= user.FirstName %></strong>!</h1>
            <div class="card mx-auto" style="width: 28rem;">
                <div class="card mx-auto" style="width: 28rem;">
                    <img src="/images/<%= user.Image %>" class="card-img-top" alt="User Image">  
                    <div class="card-body text-center">
                        <p class="card-text">Email: <%= user.Email %></p>
                        <p class="card-text">Phone Number: <%= user.PhoneNumber %></p>
                        <a href="/editAccount" class="btn btn-custom">Edit Details</a>
                    </div>
                </div>
            </div>
        
            <!-- Address Button -->
            <a href="/addAddress" class="btn btn-address mt-3">Add Your Address</a>
        
            <!-- Add Invoice Section -->
            <div class="orders-section mt-4">
                <h3 class="text-center mb-3">My Orders</h3>
                <div class="order-list">
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <div class="order-card mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Order #<%= order.OrderID %></h5>
                                        <p class="card-text text-muted">Transaction ID: <%= order.TransactionID %></p>
                                        <p class="card-text">Date: <%= new Date(order.CreatedAt).toLocaleDateString() %></p>
                                        <p class="card-text">Total Amount: $<%= order.TotalAmount %></p>
                                        <a href="/invoice/<%= order.OrderID %>" class="btn btn-custom">View Invoice</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p class="text-center">No orders found</p>
                    <% } %>
                </div>
            </div>
        </div>
        

        <br>
        <!-- Address Button -->
        <a href="/addAddress" class="btn btn-address mt-3">Add Your Address</a>
    </div>

    <%- include('partial/footer.ejs') %>
</body>
</html>
