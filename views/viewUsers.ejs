<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - POTTY APPARELs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Public Sans' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: 'Public Sans';
            background-color: #e6e2df;
            color: #343a40;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .potty-exclusive {
            text-align: left;
            margin: 20px 0;
            margin-left: 10px;
            font-size: 1.5rem;
            color: #343a40;
        }

        .main-content {
            flex: 1 0 auto;
            padding: 20px 0;
        }
        .content-container {
            background-color: white;
            border-radius: 15px;
            padding: 2rem;
            margin-top: 2rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .table {
            vertical-align: middle;
        }

        .table img {
            border-radius: 50%;
            object-fit: cover;
            width: 50px;
            height: 50px;
        }

        .btn-custom {
            background-color: #6C4F3D;
            color: white;
            border: none;
        }

        .btn-custom:hover {
            background-color: #5b3e2b;
            color: white;
        }

        .user-link {
            color: #6C4F3D;
            text-decoration: none;
        }

        .user-link:hover {
            color: #5b3e2b;
            text-decoration: underline;
        }

        .action-icons a {
            color: #6C4F3D;
            margin: 0 5px;
            font-size: 1.1rem;
        }

        .action-icons a:hover {
            color: #5b3e2b;
        }

        .delete-icon {
            color: #dc3545 !important;
        }

        .delete-icon:hover {
            color: #bb2d3b !important;
        }

        footer {
            flex-shrink: 0;
            margin-top: auto;
        }

        /* Your existing styles here */
    </style>
</head>
<body>
    <%- include ('partial/adminNavbar.ejs') %>
    
    <div class="main-content">
        <h3 class="potty-exclusive">USER MANAGEMENT</h3>
        <div class="container">
            <div class="content-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <a href="/addUser" class="btn btn-custom">
                        <i class="fas fa-plus me-2"></i>Add New User
                    </a>
                </div>
    
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Profile</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td>
                                        <img src="/images/<%= user.Image %>" alt="<%= user.FirstName %>">
                                    </td>
                                    <td>
                                        <a href="/user/<%= user.UserID %>" class="user-link">
                                            <%= user.FirstName %> <%= user.LastName %>
                                        </a>
                                    </td>
                                    <td><%= user.Email %></td>
                                    <td><%= user.PhoneNumber %></td>
                                    <td><span class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-success' %>">
                                        <%= user.role %>
                                    </span></td>
                                    <td class="action-icons">
                                        <a href="/editUser/<%= user.UserID %>" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/deleteUser/<%= user.UserID %>" 
                                           class="delete-icon" 
                                           onclick="return confirm('Are you sure you want to delete this user?')"
                                           title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('partial/footer.ejs') %>
</body>
</html>
