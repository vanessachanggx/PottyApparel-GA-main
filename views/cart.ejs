<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Parisienne' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Public Sans' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<style>
    body {
        font-family: 'Public Sans';
        background-color: #e6e2df;
        color: #343a40;
        margin: 0;
        padding: 0;
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        padding: 40px;
        background-color: #f6f5f4;
        border-radius: 15px;
    }
    .card .row {
        margin-bottom: 1rem;
    }
    .cart-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        background-color: #f6f5f4;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        position: relative;
    }
    .cart-item img {
        width: 150px;
        object-fit: cover;
    }
    .product-name {
        color: black; /* Set the text color to black */
        text-decoration: none; /* Remove the underline */
        margin-top: 0; /* Ensure no top margin */
    }
      
    .product-name:hover {
        text-decoration: none; /* Ensure no underline on hover as well */
    }
    .cart-item .item-details {
        flex-grow: 1;
    }
    .cart-item .item-details h5 {
        margin: 0;
        font-size: 1.2rem;
        font-weight: bold;
    }
    .cart-item .item-details p {
        margin: 0.5rem 0;
    }
    .cart-item .item-actions {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }
    .cart-item .item-actions form {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .cart-item .item-actions .btn-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: transparent;
        border: none;
        color: #343a40;
        font-size: 1.2rem;
    }
    .cart-item .item-actions .btn-icon:hover {
        color: #a71d2a;
    }

    .order-summary {
        text-align: right;
    }
    .order-summary .total {
        font-weight: bold;
        font-size: 1.2rem;
    }
    .btn-update{
        background-color: rgba(0, 0, 0, 0.1);
        border: none;
        color: black;
        padding: 10px 20px;
        cursor: pointer;
        display: inline-block;
    }

    .btn-back:hover {
        background-color: rgba(0, 0, 0, 0.2);
    }

    .btn-checkout {
        background-color: #3f2c1b;
        color: white;
        border-radius: 5px;
        width: 100%;
        display: center;
        margin-right: 220px;
    }
    .btn-checkout:hover {
        background-color: #e6e2df;
        color: black;
    }
    .text-italic {
        font-style: italic;
        margin-top: -10px; /* Optional: adjust spacing if needed */
    }
    

</style>
</head>
<body>
    <%- include('partial/navbar.ejs') %>
    <div class="container">
        <div class="card">
            <div class="row fs-1 text-center">
                <p>SHOPPING CART</p>
            </div>
    
            <% if (cart.length === 0) { %>
                <!-- Empty cart message -->
                <div class="text-center">
                    <p>Your shopping cart is empty. <br>
                        <a href="/" class="btn btn-primary mt-3">Start Shopping Now!</a></p>
                </div>
            <% } else { %>
                <!-- Loop through the cart items -->
                <% for (let i = 0; i < cart.length; i++) { %>
                    <div class="cart-item">
                        <img src="/images/<%= cart[i].Image %>" alt="<%= cart[i].Name %>">
                        
                        <div class="item-details">
                            <h5><a href="/product/<%= cart[i].ProductId %>" class="product-name"><%= cart[i].Name %></a></h5>
                            <p>Size: <%= cart[i].Size || 'N/A' %></p>
                            <form action="/updateCartProduct/<%= cart[i].ProductId %>" method="post">
                                Quantity:
                                <input type="number" name="Quantity" value="<%= cart[i].Quantity %>" min="1" max="999" class="form-control w-25 d-inline-block">
                                <input type="submit" value="Update" class="btn btn-update btn-sm">
                            </form>                            
                        </div>
                        
                        <div class="item-actions">
                            <p>Price: $<%= ((parseFloat(cart[i].Price) || 0) * cart[i].Quantity).toFixed(2) %></p>
                            <a href="/removeFromCart/<%=cart[i].ProductId%>" class="btn-icon">
                                <i class="fas fa-times"></i>
                            </a>
                        </div>
                    </div>
                <% } %>
            <!-- Order Summary -->
        <div class="order-summary mt-4">
            <h5>Order Summary</h5>
            <h6>Sub Total </h6>
            <% for(let i = 0; i < cart.length; i++) { %>
                <div class="d-flex justify-content-between">
                    <p><%= cart[i].ProductName %> x <%= cart[i].Quantity %></p>
                    <p>$<%= ((parseFloat(cart[i].Price) || 0) * cart[i].Quantity).toFixed(2) %></p>
                </div>
            <% } %>
            <hr>
            <div class="d-flex justify-content-between total">
                <p>Total</p>
                <p>$<%= totalAmount.toFixed(2) %></p>
            </div>
            
            <!-- GST Text -->
            <div class="d-flex justify-content-between total-gst">
                <p class="text-italic">(Inclusive of GST)</p>
            </div>

            <a class="btn btn-checkout w-100 mt-3" href="/checkout">Proceed to Checkout</a>
        </div>

            <% } %>
    </div>
 
    <%- include('partial/footer.ejs') %>
</body>
</html>
