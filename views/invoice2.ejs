<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Public Sans' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: 'Public Sans';
            background-color: #e6e2df;
        }
        .invoice-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
        }
        .invoice-header {
            border-bottom: 2px solid #eee;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }
        .invoice-details {
            margin-bottom: 30px;
        }
        .table th {
            background-color: #f8f9fa;
        }
        .product-image {
            width: 150px;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
        }
        .btn-print {
            background-color: rgba(0, 0, 0, 0.1);
            color: black;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            margin-bottom: 15px;
        }
        .btn-print:hover {
            background-color: #5b3e2b;
            color: white;
        }
        .btn-back {
            background-color: #6C4F3D;
            color: white;
            border: none;
            padding: 10px 30px;
            border-radius: 5px;
            display: block;
            margin: 0 auto;
            width: fit-content;
        }
        .btn-back:hover {
            background-color: #5b3e2b;
            color: white;
        }
    </style>
</head>
<body>
    <%- include('partial/adminNavbar.ejs') %>
    
    <div class="container invoice-container">
        <div class="invoice-header">
            <div class="row">
                <div class="col-6">
                    <h2>Invoice</h2>
                    <br>
                    <p><b>Order No: </b><%= orderId %></p>
                    <p><b>Transaction ID:</b> <%= transactionId %></p>
                    <p><b>Ordered On:</b> <%= new Date(orderDate).toLocaleString() %></p>
                </div>
                <div class="col-6 text-end">
                    <img src="/images/logo2.0.jpg" alt="POTTY APPARELs Logo" height="100">
                </div>
            </div>
        </div>

        <div class="invoice-details">
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart.forEach(item => { %>
                        <tr>
                            <td>
                                <img src="/images/<%= item.Image %>" alt="<%= item.Name %>" class="product-image">
                            </td>
                            <td><%= item.Name %></td>
                            <td><%= item.Quantity %></td>
                            <td><%= item.Size %></td>
                            <td>$<%= Number(item.Price).toFixed(2) %></td>
                            <td>$<%= (Number(item.Price) * item.Quantity).toFixed(2) %></td>
                        </tr>
                    <% }); %>
                </tbody>                
                <tfoot>
                    <tr>
                        <td colspan="5" class="text-end"><strong>Total Amount:</strong></td>
                        <td><strong>$<%= totalAmount %></strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="text-center">
            <button class="btn btn-print" onclick="window.print()">
                <i class="fas fa-print me-2"></i>Print Invoice
            </button>
        </div>
        <a href="/viewOrders" class="btn btn-back mt-3">Back</a>
    </div>
    <%- include('partial/footer.ejs') %>
</body>
</html>
