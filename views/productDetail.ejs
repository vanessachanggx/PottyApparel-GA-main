<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link href='https://fonts.googleapis.com/css?family=Parisienne' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Public Sans' rel='stylesheet'>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>POTTY APPARELS</title>
  <style>
    body {
        background-color: #e6e2df;
        font-family: 'Public Sans';
        margin: 0;
        padding: 0;
    }

    .product-images {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .product-images img {
        width: 100%;
        max-width: 300px;
        height: auto;
        object-fit: cover;
    }

    .size-selector {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        font-weight: bold;
    }

    .size-selector select, .size-option {
        padding: 5px 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        cursor: pointer;
        text-align: center;
    }

    .size-selector select {
        display: inline-block;
    }

    .size-option.selected {
        background-color: grey;
        color: white;
    }

    .product-description {
        flex: 1 1 auto;
    }

    .btn-back {
        background-color: rgba(0, 0, 0, 0.1);
        border: none;
        color: black;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 20px;
        display: inline-block;
    }

    .btn-back:hover {
        background-color: rgba(0, 0, 0, 0.2);
    }

    .btn-addToCart {
        background-color: #3f2c1b;
        border-radius: 8px;
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 20px;
        display: block;
        margin: 20px auto; /* Centers the button horizontally */
    }

    .btn-addToCart:hover {
        background-color: #e6e2df;
        color: black;
    }

    .product-details {
        padding: 20px;
        background-color: none;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .product-details h4 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .product-details p {
        font-size: 18px;
    }

    .product-details .quantity-input {
        width: 100px;
        margin-top: 10px;
    }

    .size-option {
        cursor: pointer;
        padding: 5px 10px;
        margin: 0 5px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .size-option.selected {
        background-color: #3f2c1b;
        color: white;
    }
  </style>
</head>
<body>
  <%- include('partial/navbar.ejs') %>
  <div class="container mt-3">
    <div class="row">
        <div class="col-md-6 product-images">
            <img src="/images/<%= product.Image %>" alt="<%= product.Name %> - Main Image">
            <% if (product.Image1) { %><img src="<%= product.Image1 %>" alt="<%= product.Name %> - Image 1"><% } %>
            <% if (product.Image2) { %><img src="<%= product.Image2 %>" alt="<%= product.Name %> - Image 2"><% } %>
            <% if (product.Image3) { %><img src="<%= product.Image3 %>" alt="<%= product.Name %> - Image 3"><% } %>
        </div>

        <div class="col-md-6">
            <div class="product-details card mb-3">
                <div class="card-body">
                    <h4><b><%= product.Name %></b></h4>
                    <p><%= product.Description %></p>
                    <br>
                    <p><b>Price:</b> S$ <%= product.Price %></p>
                    <br>
                    <form id="addToCartForm" method="post" action="/cart" onsubmit="return validateQuantity()">
                        <% const sizes = product.Size ? product.Size.split(',').map(Size => Size.trim()) : []; %>
                        <% if (sizes.length > 0) { %>
                            <div class="size-selector">
                                <label for="size">Size:</label>
                                <div id="size-options">
                                    <% sizes.forEach((Size) => { %>
                                        <span class="size-option" onclick="selectSize('<%=Size%>')"><%=Size%></span>
                                    <% }); %>
                                </div>
                            </div>
                        <% } else { %>
                            <p>No available sizes.</p>
                        <% } %>
                        <br>
                        <p>Quantity: 
                            <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-input">
                        </p>
                        <!-- Hidden Fields -->
                        <input type="hidden" name="ProductID" value="<%= product.ProductID %>" />
                        <input type="hidden" name="Image" value="<%= product.Image %>">
                        <input type="hidden" name="Name" value="<%= product.Name %>">
                        <input type="hidden" id="selectedSize" name="Size" />
                        <input type="hidden" name="Price" value="<%= product.Price %>" />
                        <input type="submit" value="Add to Cart" class="btn-addToCart">
                    </form>                    
                    <br>
                    <p>Available Stocks Left: <%= product.Stock %> Pieces</p>
                </div>
            </div>
            <a href="/product" class="btn btn-back">Back to Products</a>
        </div>
    </div>
  </div>

<script>
    function validateQuantity() {
        const quantity = document.getElementById('quantity').value;
        const size = document.getElementById('selectedSize').value;
    
        console.log('Quantity:', quantity);  // Debugging
        console.log('Selected Size:', size); // Debugging
    
        if (quantity < 1) {
            alert('Quantity must be at least 1');
            return false;
        }
    
        if (!size) {
            alert('Please select a size');
            return false;
        }
    
        return true;
    }
    

    function selectSize(Size) {
        document.getElementById('selectedSize').value = Size;
        const sizeOptions = document.querySelectorAll('.size-option');
        sizeOptions.forEach(option => {
            option.classList.remove('selected');
        });
        const selectedOption = Array.from(sizeOptions).find(option => option.innerText === Size);
        selectedOption.classList.add('selected');
    }
</script>

  <%- include('partial/footer.ejs') %>
</body>
</html>
